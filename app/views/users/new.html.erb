<div class="well">
  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username%>
    </div> 

    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div> 

    <div class="control-group">
      <%= f.label :confirm_password %>
      <%= f.password_field :password_confirmation %>
    </div> 

    <%= f.submit @user.new_record? ? :Register : :Update, class: "btn btn-primary" %>
    <% end %>
</div>
