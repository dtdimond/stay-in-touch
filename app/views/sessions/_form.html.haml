%section.sessions
  .row.margin-btm
    .col-xl-4.col-xl-offset-4.col-lg-5.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
      - action = registration ? "/register" : "/login"
      = bootstrap_form_tag(url: action) do |f|
        %h1.title= registration ? "Sign Up" : "Sign In"
        = f.text_field :name if registration
        = f.email_field :email
        = f.password_field :password
        = f.submit(registration ? "Sign Up" : "Sign In", class: "btn btn-primary")

