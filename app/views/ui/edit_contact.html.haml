%section.communications_index
  .row
    .col-xs-10.col-xs-offset-1
      %form.new_communication#new_communication(action="#" accept-charset="UTF-8" method="post")
      .row.relative-row
        .col-xs-7.col-sm-8
          %h1.title Mom
        .col-xs-5.col-sm-4.align-bottom.text-right
          %a.link-add-contact(href="#") See All Communications
      %hr.squeeze-up
  .row
    .col-xs-5.col-xs-offset-1
      .row
        .col-xs-12
          .card.card-inverse.card-success
            .row
              .col-xs-7
                .card-block
                  %p Last contacted 2 days ago
              .col-xs-5
                .card-block
                  %a Add Communication
            .row
              .col-xs-1
                .card-block
                  %i.fa.fa-envelope.fa-2x
              .col-xs-4
                .card-block
                  %p xxxxx@gmail.com
              .col-xs-7
                .card-block
                  %a edit
            .row
              .col-xs-1
                .card-block
                  %i.fa.fa-phone.fa-2x
              .col-xs-4
                .card-block
                  %p xxx-xxx-xxxx
              .col-xs-7
                .card-block
                  %a edit
    .col-xs-5
      .row
        %img(src="http://placehold.it/550x550")

